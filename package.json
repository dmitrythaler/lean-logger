{
  "name": "lean-logger",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "dead simple, fast, configurable node.js logging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "simple",
    "logger",
    "log"
  ],
  "author": "Dmitry Thaler <dmitry@thaler.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitrythaler/lean-logger.git"
  },
  "dependencies": {},
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "forceExit": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 60000,
    "coverageReporters": [
      "json-summary",
      "html"
    ],
    "testMatch": [
      "<rootDir>/test/(*.)spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
