{
  "name": "lean-logger",
  "private": false,
  "version": "3.0.1",
  "description": "dead simple, fast, env configurable node.js json logging",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "simple",
    "logger",
    "log",
    "typescript",
    "ts"
  ],
  "author": "Dmitry Thaler <dmitry@thaler.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitrythaler/lean-logger.git"
  },
  "dependencies": {},
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && jest"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "forceExit": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 60000,
    "coverageReporters": [
      "json-summary",
      "html"
    ],
    "testMatch": [
      "<rootDir>/src/(*.)spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
