{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
  ]
}
